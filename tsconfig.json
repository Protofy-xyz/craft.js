{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@protocraft/core": [
        "packages/core/src/index"
      ],
      "@craftjs/*": [
        "packages/core/src/*"
      ],
      "@protocraft/layers": [
        "packages/layers/src/index"
      ],
      "@protocraft/utils": [
        "packages/utils/src/index"
      ],
      "@protocraft/utils/*": [
        "packages/utils/src/*"
      ],
    }
  },
  "exclude": [
    "**/node_modules/**",
    "cypress"
  ]
}